<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KoiFarm.WebApplication.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap" rel="stylesheet">

</head>
<body>
    <header style ="background-color: white;">
        <a class="navbar-brand" style="align-items: center; justify-content: center; display: flex;" asp-area="" asp-page="/Index">
            <img src="~/images/logot.png" alt="TheAquaKoi" style="width: 120px;" />
        </a>
    </header>
    <div class="container-fluid">
        @RenderBody()
        <div class="hinhca">
            <img src="~/images/19.png" />
        </div>
        <div class="dangnhap1">ĐĂNG NHẬP</div>
        <button class="google"> <img src="~/images/Google.png" /> Đăng nhập bằng Google</button>
        <div class="OR"><img src="~/images/OR.jpg" /></div>

        <div>
            <input type="text" id="form" placeholder="Tên người dùng hoặc email" />
            <input type="password" id="password" placeholder="Mật khẩu" />
            <a class="forgot" asp-area="" asp-page="/">Quên mật khẩu</a>
            <button class="btndnhap">
                Đăng nhập
            </button>
            <div class="signup-link">
                <span>Chưa có tài khoản?</span>
                <a href="./SignUp_View">Đăng ký</a>
            </div>

        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            <img src="~/images/14.png" style="width: 100%; height: auto;" />
            &copy; 2024 - KoiFarm.WebApplication - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
