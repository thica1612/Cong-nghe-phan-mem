@page
@model KoiFarm.WebApplication.Pages.User.CreateModel
@{
    ViewData["Title"] = "Thêm người dùng mới";
}

<h1>Thêm người dùng mới</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="User.UserName"></label>
        <input type="text" class="form-control" asp-for="User.UserName" />
    </div>
    <div class="form-group">
        <label asp-for="User.Email"></label>
        <input type="email" class="form-control" asp-for="User.Email" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
