<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Page - The Aqua Koi</title>
    <link rel="stylesheet" href="~/Pages/Admin/User/user.css" />
</head>
<body>
    <div class="layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>@User.Identity.Name (User)</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="#" class="sidebar-link">Trang chủ</a>
                <a href="#" class="sidebar-link">Đơn hàng</a>
                <a href="#" class="sidebar-link">Thông tin cá nhân</a>
                <a href="#" class="sidebar-link">Lịch sử giao dịch</a>
                <a href="#" class="sidebar-link">Đăng xuất</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="header">
                <div class="header-logo">
                    <!-- Thêm hình ảnh logo -->
                    <img src="~/images/logot.png" style="width: 120px;">
                </div>
                <div class="header-user">
                    <p>@User.Identity.Name (User)</p>
                </div>
            </header>

            <!-- Content Section -->
            <section class="content">
                @RenderBody()
            </section>

            <!-- Footer -->
            <footer class="footer">
                <!-- Thông tin và hình ảnh trong footer -->
                <img src="~/images/14.png" style="width: 100%; height: auto;">
            </footer>
        </main>
    </div>
</body>
</html>
