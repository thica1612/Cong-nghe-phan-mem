@page
@model KoiFarm.WebApplication.Pages.User.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<h1>Chỉnh sửa người dùng</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="User.UserName"></label>
        <input type="text" class="form-control" asp-for="User.UserName" />
    </div>
    <div class="form-group">
        <label asp-for="User.Email"></label>
        <input type="email" class="form-control" asp-for="User.Email" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>
