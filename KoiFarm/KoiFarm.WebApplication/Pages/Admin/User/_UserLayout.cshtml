<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Page - The Aqua Koi</title>
    <link rel="stylesheet" href="~/css/user.css" />
</head>
<body>
    <div class="layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="user">
                <h2>@User.Identity.Name (User)</h2>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li><a href="#" class="sidebar-link">Trang chủ</a></li>
                    <li><a href="#" class="sidebar-link">Đơn hàng</a></li>
                    <li><a href="#" class="sidebar-link">Thông tin cá nhân</a></li>
                    <li><a href="#" class="sidebar-link">Lịch sử giao dịch</a></li>
                    <li><a href="#" class="sidebar-link">Đăng xuất</a></li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="header">
                <div class="user-info">
                    <p>@User.Identity.Name (User)</p>
                </div>

                <div class="header-logo">
                    <img src="~/images/logot.png" alt="The Aqua Koi Logo" style="width: 150px;">
                </div>
                
            </header>

            <!-- Content Section -->
            <section class="content">
                <div class="title">
                    <h1>Welcome to The Aqua Koi</h1>
                </div>
                <div class="table-container">
                    <!-- Dynamic content will go here, like customer tables or order lists -->
                    @RenderBody()
                </div>
            </section>

            <!-- Footer -->
            <footer class="footer">
                <!-- Thông tin và hình ảnh trong footer -->
                <img src="~/images/14.png" style="width: 100%; height: auto;">
            </footer>
        </main>
    </div>
</body>
</html>
