@page
@model KoiFarm.WebApplication.Pages.Customers.TransactionHistory.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransactionHistory[0].TransactionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionHistory[0].TransactionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionHistory[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionHistory[0].Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TransactionHistory) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.UserId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TransactionId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TransactionId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TransactionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
