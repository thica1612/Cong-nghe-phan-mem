@page
@model KoiFarm.WebApplication.Pages.Admin.Cart.DeleteModel
@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Pages/Admin/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2>Xóa sản phẩm</h2>
        </div>
        <div class="card-body">
            <p class="text-danger">
                <strong>Bạn có chắc chắn muốn xóa sản phẩm này?</strong>
            </p>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <td>@Model.Koi.KoiName</td>
                    </tr>
                    <tr>
                        <th>Xuất xứ</th>
                        <td>@Model.Koi.KoiOrigin</td>
                    <tr>
                        <th scope="row">Giới tính</th>
                        <td>@Model.Koi.KoiGender</td>
                    </tr>
                    <tr>
                        <th scope="row">Năm sinh</th>
                        <td>@Model.Koi.KoiYear</td>
                    </tr>
                    <tr>
                        <th scope="row">Kích thước (cm)</th>
                        <td>@Model.Koi.KoiSize</td>
                    </tr>
                    <tr>
                        <th scope="row">Giá bán</th>
                        <td>@Model.Koi.KoiPrice</td>
                    </tr>
                    <tr>
                        <th scope="row">Tồn kho</th>
                        <td>@Model.Koi.Stock</td>
                    </tr>
                    <tr>
                        <th scope="row">Thức ăn hàng ngày (kg)</th>
                        <td>@Model.Koi.Dailyfood</td>
                    </tr>
                    <tr>
                        <th scope="row">Tỷ lệ sàng lọc (%)</th>
                        <td>@Model.Koi.Screeningrate</td>
                    </tr>
                </tbody>
            </table>
            <form method="post" class="mt-4">
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
