@page
@model KoiFarm.WebApplication.Pages.Customers.Order.IndexModel
@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Pages/Admin/Order/_OrderLayout.cshtml";
}

<p>
    <div style="text-align: left; margin-bottom: 15px;">
        <a asp-page="./Create" class="btn-add">Tạo đơn hàng mới</a>
    </div>
</p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Ngày đặt hàng</th>
            <th>Tổng cộng</th>
            <th>Trạng thái</th>
            <th>Mã khách hàng</th>
            <th>Hành động</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model.KoiOrder)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.UserId)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.OrderId">Sửa</a> |
                    <a asp-page="./Details" asp-route-id="@item.OrderId">Chi tiết</a> |
                    <a asp-page="./Delete" asp-route-id="@item.OrderId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
