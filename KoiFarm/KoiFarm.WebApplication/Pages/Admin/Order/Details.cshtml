@page
@model KoiFarm.WebApplication.Pages.Customers.Order.EditModel
@{
    ViewData["Title"] = "Đơn hàng";
    Layout = "~/Pages/Admin/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Chi tiết đơn hàng</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th scope="row">Ngày đặt hàng</th>
                        <td>@Model.KoiOrder.OrderDate</td>
                    </tr>
                    <tr>
                        <th scope="row">Tổng cộng</th>
                        <td>@Model.KoiOrder.TotalAmount</td>
                    </tr>
                    <tr>
                        <th scope="row">Trạng thái</th>
                        <td>@Model.KoiOrder.Status</td>
                    </tr>
                    <tr>
                        <th scope="row">Khách hàng</th>
                        <td>@Model.KoiOrder.CustomerId</td>
                    </tr>
                    <tr>
                        <th scope="row">Chỉnh sửa</th>
                        <td>@Model.KoiOrder.OrderId</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer text-end">
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

