@page
@model KoiFarm.WebApplication.Pages.Admin.Promotion.DetailsModel
@{
    ViewData["Title"] = "Chi Tiết Khuyến Mãi";
    Layout = "~/Pages/Admin/Promotion/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">CHI TIẾT KHUYẾN MÃI</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th scope="row">Tên khuyến mãi</th>
                        <td>@Model.Promotion.PromotionName</td>
                    </tr>
                    <tr>
                        <th scope="row">Chiết khấu</th>
                        <td>@Model.Promotion.DiscountPercentage</td>
                    </tr>
                    <tr>
                        <th scope="row">Ngày bắt đầu</th>
                        <td>@Model.Promotion.StartDate</td>
                    </tr>
                    <tr>
                        <th scope="row">Ngày kết thúc</th>
                        <td>@Model.Promotion.EndDate</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer text-end">
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
