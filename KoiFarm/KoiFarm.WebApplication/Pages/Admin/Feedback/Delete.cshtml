@page
@model KoiFarm.WebApplication.Pages.Customers.Feedback.DeleteModel
@{
    ViewData["Title"] = "Xóa Đánh Giá";
    Layout = "~/Pages/Admin/Feedback/_FeedbackLayout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2>XÓA ĐÁNH GIÁ</h2>
        </div>
        <div class="card-body">
            <p class="text-danger">
                <strong>Bạn có chắc chắn muốn xóa đánh giá của khách hàng dưới đây?</strong>
            </p>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Lượt đánh giá</th>
                        <td>@Model.Feedback.Rating</td>
                    </tr>
                    <tr>
                        <th>Lời đánh giá</th>
                        <td>@Model.Feedback.Comments</td>
                    </tr>
                    <tr>
                        <th>Ngày đánh giá</th>
                        <td>@Model.Feedback.FeedbackDate</td>
                    </tr>
                    <tr>
                        <th>Mã khách hàng</th>
                        <td>@Model.Feedback.CustomerId</td>
                    </tr>
                    <tr>
                        <th>Mã Koi</th>
                        <td>@Model.Feedback.KoiId</td>
                    </tr>
                </tbody>
            </table>
            <form method="post" class="mt-4">
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
