@page
@model KoiFarm.WebApplication.Pages.Admin.DashboardData.CreateModel
@{
    ViewData["Title"] = "TẠO BÁO CÁO";
    Layout = "~/Pages/Admin/_AdminLayout.cshtml";
}

<div class="content">
    <h1 class="title">Tạo Báo Cáo Mới</h1>
    <div class="form-container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="input-group">
                    <label asp-for="DashboardDatum.ReportId" class="control-label"></label>
                    <input asp-for="DashboardDatum.ReportId" class="form-control" />
                    <span asp-validation-for="DashboardDatum.ReportId" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <label asp-for="DashboardDatum.MetricName" class="control-label"></label>
                    <input asp-for="DashboardDatum.MetricName" class="form-control" />
                    <span asp-validation-for="DashboardDatum.MetricName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="input-group">
                    <label asp-for="DashboardDatum.MetricValue" class="control-label"></label>
                    <input asp-for="DashboardDatum.MetricValue" class="form-control" />
                    <span asp-validation-for="DashboardDatum.MetricValue" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <label asp-for="DashboardDatum.ReportDate" class="control-label"></label>
                    <input asp-for="DashboardDatum.ReportDate" class="form-control" />
                    <span asp-validation-for="DashboardDatum.ReportDate" class="text-danger"></span>
                </div>
            </div>
            <div class="button-container">
                <button type="submit" class="btn-save">Tạo</button>
                <a asp-page="Index" class="btn-secondary">Quay Lại</a>
            </div>
        </form>
    </div>
</div>
