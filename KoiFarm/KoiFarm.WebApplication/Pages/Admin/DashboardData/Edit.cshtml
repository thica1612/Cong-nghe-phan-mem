@page
@model KoiFarm.WebApplication.Pages.Admin.DashboardData.EditModel
@{
    ViewData["Title"] = "CHỈNH SỬA BÁO CÁO";
    Layout = "~/Pages/Admin/_AdminLayout.cshtml";
}

<div class="form-container">
    <h1 class="title">Chỉnh Sửa Báo Cáo</h1>
    <div class="table-container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DashboardDatum.ReportId" />

            <!-- Trường MetricName -->
            <div class="form-row">
                <div class="input-group">
                    <label asp-for="DashboardDatum.MetricName" class="control-label"></label>
                    <textarea asp-for="DashboardDatum.MetricName" class="form-control"></textarea>
                    <span asp-validation-for="DashboardDatum.MetricName" class="text-danger"></span>
                </div>
            </div>

            <!-- Trường MetricValue -->
            <div class="form-row">
                <div class="input-group">
                    <label asp-for="DashboardDatum.MetricValue" class="control-label"></label>
                    <textarea asp-for="DashboardDatum.MetricValue" class="form-control"></textarea>
                    <span asp-validation-for="DashboardDatum.MetricValue" class="text-danger"></span>
                </div>
            </div>

            <!-- Trường ReportDate -->
            <div class="form-row">
                <div class="input-group">
                    <label asp-for="DashboardDatum.ReportDate" class="control-label"></label>
                    <input asp-for="DashboardDatum.ReportDate" class="form-control" />
                    <span asp-validation-for="DashboardDatum.ReportDate" class="text-danger"></span>
                </div>
            </div>

            <div class="button-container">
                <input type="submit" value="Lưu Thay Đổi" class="btn-save" />
            </div>
        </form>
    </div>

    <div class="button-container">
        <a asp-page="./Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
    </div>
</div>

