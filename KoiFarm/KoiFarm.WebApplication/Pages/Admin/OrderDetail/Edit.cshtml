@page
@model KoiFarm.WebApplication.Pages.Customers.OrderDetail.EditModel
@{
    ViewData["Title"] = "Đơn hàng";
    Layout = "~/Pages/Admin/OrderDetail/_OrderDetailLayout.cshtml";
}
<div class="form-container">
    <h2>Chỉnh sửa đơn hàng</h2>
    <!-- Form chính -->
    <form method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Sắp xếp các trường input thành 2 cột -->
        <div class="form-row">
            <div class="input-group">
                <label asp-for="OrderDetail.Quantity" class="control-label">Số lượng</label>
                <input asp-for="OrderDetail.Quantity" class="form-control" readonly />
                <span asp-validation-for="OrderDetail.Quantity" class=" text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="OrderDetail.UnitPrice" class="control-label">Đơn giá</label>
                <select asp-for="OrderDetail.UnitPrice" class="form-control" asp-items="ViewBag.OrderId"></select>
                <span asp-validation-for="OrderDetail.UnitPrice" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="input-group">
                <label asp-for="OrderDetail.KoiId" class="control-label">Mã Koi</label>
                <select asp-for="OrderDetail.KoiId" class="form-control" asp-items="ViewBag.KoiId"></select>
                <span asp-validation-for="OrderDetail.KoiId" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="OrderDetail.OrderDetailId" class="control-label">Mã Order</label>
                <input asp-for="OrderDetail.OrderDetailId" class="form-control" />
                <span asp-validation-for="OrderDetail.OrderDetailId" class="text-danger"></span>
            </div>
        </div>

        <!-- Nút lưu thay đổi và quay lại -->
        <div class="button-container">
            <button type="submit" class="btn-save">LƯU THAY ĐỔI</button>
            <a asp-page="./Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

