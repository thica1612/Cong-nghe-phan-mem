@page
@model KoiFarm.WebApplication.Pages.CartModel
@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "_Home";
}
<div class="bitcart">
    <table>
        <thead>
            <tr>
                <th>THÔNG TIN SẢN PHẨM</th>
                <th>GIÁ SẢN PHẨM</th>
                <th>SỐ LƯỢNG</th>
                <th>PHÍ VẬN CHUYỂN</th>
                <th>TỔNG GIÁ</th>
                <th>GỠ</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div class="product-info">
                        <img src="koi-bekko.jpg" alt="Koi Bekko" class="product-image">
                        <div class="product-details">
                            <p>Koi Bekko</p>
                            <span>Giới tính: Koi cái</span>
                            <span>Năm sinh: 2017</span>
                        </div>
                    </div>
                </td>
                <td>950.000 đ</td>
                <td>
                    <div class="quantity-control">
                        <button class="btn-minus">-</button>
                        <input type="number" value="1" min="1" readonly>
                        <button class="btn-plus">+</button>
                    </div>
                </td>
                <td>Miễn phí</td>
                <td>950.000 đ</td>
                <td>
                    <button class="btn-remove">🗑</button>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="product-info">
                        <img src="koi-tancho.jpg" alt="Koi Tancho" class="product-image">
                        <div class="product-details">
                            <p>Koi Tancho</p>
                            <span>Giới tính: Koi đực</span>
                            <span>Năm sinh: 2018</span>
                        </div>
                    </div>
                </td>
                <td>1.200.000 đ</td>
                <td>
                    <div class="quantity-control">
                        <button class="btn-minus">-</button>
                        <input type="number" value="2" min="1" readonly>
                        <button class="btn-plus">+</button>
                    </div>
                </td>
                <td>Miễn phí</td>
                <td>2.400.000 đ</td>
                <td>
                    <button class="btn-remove">🗑</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="container">
    <div class="summary-box">
        <div class="summary-item">
            <span class="label">Giá trị sản phẩm</span>
            <span class="value">1.350.000đ</span>
        </div>
        <div class="summary-item">
            <span class="label">Phí vận chuyển</span>
            <span class="value">0đ</span>
        </div>
        <div class="summary-item-total">
            <span class="label">Tổng cộng</span>
            <span class="value">1.350.000đ</span>
        </div>
        <button class="checkout-btn">Thanh toán</button>
    </div>
</div>