@model KoiFarm.WebApplication.Pages.Admin.User.DetailsModel
@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Pages/Customer/_CustomerLayout.cshtml";
}

<div class="content">
    <h1>@Model.User.UserName</h1>
    <h2>Số điện thoại: @Model.User.Phonenumber</h2>
    <h3>Địa chỉ: @Model.User.UserAddress</h3>
    <h4>Email: @Model.User.Email</h4>
    <h5>Điểm tích luỹ: @Model.User.PointBalance</h5>
</div>

<div class="button-container">
    <a asp-page="./Index" class="btn btn-secondary">Quay lại</a>
</div>

