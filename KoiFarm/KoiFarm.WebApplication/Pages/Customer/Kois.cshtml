@page
@model KoiFarm.WebApplication.Pages.KoisModel
@{
    ViewData["Title"] = "Sản phẩm";
    Layout = "_Home";
}

<div class="product-grid">
    @foreach (var koi in Model.Koi.Take(9))
    {
        <div class="ca">
            <div class="imgca">
                <img src="@Url.Content("~/KoiImages/" + koi.KoiImage + ".png")" alt="Ảnh của @koi.KoiName" />
            </div>
            <div class="blob">
                <img src="~/images/Blob(1).png" style="width: 100%; height: auto;" alt="Ảnh blob" />
            </div>
            <div class="buttongia1">
                <a asp-page="/Customer/chitietsp" asp-route-id="@koi.KoiId">Giá @koi.KoiPrice</a>
            </div>
            <div class="tenca">@koi.KoiName</div>
            <div class="mieuta">
                Nguồn gốc: @koi.KoiOrigin <br>
                Giới tính: @koi.KoiGender <br>
                Năm sinh: @koi.KoiYear <br>
                Kích thước: @koi.KoiSize cm <br>
            </div>
            <div class="so-sanh">
                <img src="~/images/iconplus.png" /> So sánh
            </div>
        </div>
    }
</div>